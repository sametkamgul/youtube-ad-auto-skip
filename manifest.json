{
    "name": "Youtube Ad Auto Skip && Close",
    "description": "Closes ads automatically when the skip and close buttons are revealed. Remainder: it is not a ad blocker. It is a friendly ad skipper. The Ads will be displayed as it should be",
    "version": "1.0",
    "author": "Samet KamÄŸul",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js",
        "persistance": true
    },
    "permissions": ["activeTab", "scripting", "tabs"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/*"],
            "js": ["inject.js"]
        }
    ],
    "icons": {
        "16": "assets/icon16.png",
        "32": "assets/icon32.png",
        "64": "assets/icon64.png",
        "128": "assets/icon128.png",
        "256": "assets/icon256.png",
        "512": "assets/icon512.png"
    }
}
